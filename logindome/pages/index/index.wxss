/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.login-panel {
  width: 90%;
  margin-top: 24px;
  padding: 12px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
}

.login-title {
  font-weight: 600;
  margin-bottom: 8px;
}

.login-actions {
  display: flex;
  gap: 12px;
}

.login-error {
  margin-top: 8px;
  color: #d93026;
  word-break: break-all;
}

.login-result {
  margin-top: 10px;
}

.kv {
  display: flex;
}

.k {
  width: 60px;
  color: #666;
}

.v {
  flex: 1;
  white-space: pre-wrap;
  word-break: break-all;
  color: #333;
}

.login-tip {
  margin-top: 8px;
  font-size: 12px;
  color: #888;
}

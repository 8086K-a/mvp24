# ========== 生产环境配置示例 ==========
# 复制此文件为 .env.local 并修改为你的实际值

# ========== 基础配置 ==========
APP_NAME=MultiGPT Platform
# 本地开发时使用 localhost，生产环境使用实际域名
APP_URL=http://localhost:3000/
NEXT_PUBLIC_APP_URL=http://localhost:3000/
NODE_ENV=production

# ========== Supabase 配置 ==========
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========== 腾讯云 CloudBase 配置（中国用户）==========
NEXT_PUBLIC_WECHAT_CLOUDBASE_ID=example_cloudbase_id

# ========== Stripe 配置 ==========
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ========== PayPal 配置 ==========
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here
PAYPAL_SKIP_SIGNATURE_VERIFICATION=false

# ========== 微信支付配置（NATIVE支付 - PC扫码）==========
# 从微信商户平台获取：https://pay.weixin.qq.com
#
# 1. WECHAT_APP_ID: 应用ID（关联的公众号或小程序ID）
WECHAT_APP_ID=wxXXXXXXXXXXXXXXXX

# 2. WECHAT_PAY_MCH_ID: 商户ID（微信商户号）
WECHAT_PAY_MCH_ID=1234567890

# 3. WECHAT_PAY_API_V3_KEY: API v3 密钥（32字节）
#    在微信商户平台 > 账户中心 > API安全 > 设置API v3密钥
#    长度必须为32个字符（包括数字和字母）
WECHAT_PAY_API_V3_KEY=xxxxxxxxxxxxxxxxxxxxxxxx

# 4. WECHAT_PAY_SERIAL_NO: 商户证书序列号
#    从下载的商户证书中获取（openssl x509 -in cert.pem -noout -serial）
WECHAT_PAY_SERIAL_NO=XXXXXXXXXXXXXXXXXXXXXXXX

# 5. WECHAT_PAY_PRIVATE_KEY: 商户私钥（PKCS#8格式）
#    从微信商户平台下载的商户密钥，转换为PKCS#8格式
#    使用 \n 表示换行，或者使用多行格式
WECHAT_PAY_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQDXXXXX\n...\n-----END PRIVATE KEY-----

# ========== 支付宝配置 ==========
NEXT_PUBLIC_ALIPAY_APP_ID=example_alipay_app_id
ALIPAY_PRIVATE_KEY=example_private_key

# ========== 认证配置 ==========
WECHAT_APP_SECRET=example_wechat_app_secret

# ========== 地理分流配置 ==========
DOMESTIC_SYSTEM_URL=https://mvp-24-main.vercel.app
INTERNATIONAL_SYSTEM_URL=https://mvp-24-main.vercel.app

# ========== 高级配置 ==========
IP_API_URL=https://ipapi.co/json/
GEO_CACHE_TTL=3600000
DB_CONNECTION_TIMEOUT=30000

# ========== AI API 配置 ==========
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
AI_GATEWAY_API_KEY=your_vercel_ai_gateway_api_key_here